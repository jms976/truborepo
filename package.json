{
  "name": "berryProj",
  "private": true,
  "workspaces": {
    "packages": [
      "package/*"
    ]
  },
  "scripts": {
    "add": "yarn workspace",
    "app": "yarn workspace vite-proj",
    "postinstall": "husky install"
  },
  "packageManager": "yarn@3.3.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.11",
    "husky": ">=7",
    "lint-staged": ">=10",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "echo \\”[Husky] commit-msg\\”"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
